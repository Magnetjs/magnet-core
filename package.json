{
  "name": "magnet-core",
  "version": "4.0.4",
  "description": "Magnet's core, a simple module loader.",
  "keywords": [
    "core",
    "magnet",
    "magnetjs"
  ],
  "homepage": "https://github.com/Magnetjs/magnet-core#readme",
  "bugs": {
    "url": "https://github.com/Magnetjs/magnet-core/issues"
  },
  "license": "MIT",
  "author": "Kieve Chua <kievechua@gmail.com> (https://github.com/kievechua)",
  "main": "index.js",
  "types": "index.d.js",
  "bin": {
    "magnet": "./cli.js"
  },
  "repository": "magnetjs/magnet-core",
  "scripts": {
    "start": "fly",
    "build": "fly buildAndCopy",
    "dist": "tsc && fly copyBasic && cd dist && npm publish",
    "test": "ava",
    "watch-test": "ava --watch | tap-spec"
  },
  "dependencies": {
    "bluebird": "^3.4.7",
    "bunyan": "^1.8.12",
    "fs-extra": "^7.0.1",
    "lodash": "^4.17.4",
    "parent-require": "^1.0.0"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.66",
    "@types/node": "^13.5.2",
    "ava": "^1.2.0",
    "fly": "^2",
    "fly-clear": "^1.0.1",
    "fly-esnext": "^2.0.1",
    "fly-flatten": "^1.0.1",
    "fly-typescript": "^1.1.1",
    "fly-watch": "^1.1.1",
    "typescript": "^3.2.4"
  },
  "engines": {
    "node": ">=6.9.5"
  },
  "ava": {
    "failFast": true,
    "tap": true,
    "source": [
      "**/*.{js,jsx}",
      "!dist/**/*"
    ]
  }
}
