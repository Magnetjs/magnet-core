{
  "name": "magnet-core",
  "version": "3.4.1",
  "description": "Magnet's core, a simple module loader.",
  "keywords": [
    "core",
    "magnet",
    "magnetjs"
  ],
  "homepage": "https://github.com/Magnetjs/magnet-core#readme",
  "bugs": {
    "url": "https://github.com/Magnetjs/magnet-core/issues"
  },
  "license": "MIT",
  "author": "Kieve Chua <kievechua@gmail.com> (https://github.com/kievechua)",
  "main": "index.js",
  "bin": {
    "magnet": "./cli.js"
  },
  "repository": "magnetjs/magnet-core",
  "scripts": {
    "build": "npm run clean-lib && npm run build:index && npm run copy-package",
    "build:index": "babel src --out-dir dist",
    "clean-lib": "node_modules/.bin/rimraf ./dist",
    "copy-package": "cp -rf package.json LICENSE README.md dist",
    "dist": "npm run build && cd dist && npm publish",
    "test": "ava",
    "watch": "nodemon --ignore dist --exec \"babel src\" --out-dir dist --source-maps",
    "watch-all": "concurrently \"npm run watch\" \"npm run watch-test\"",
    "watch-test": "ava --watch | tap-spec"
  },
  "babel": {
    "ignore": [
      "docs",
      "node_modules",
      "dist",
      "test"
    ],
    "plugins": [
      "fast-async"
    ],
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  },
  "dependencies": {
    "bunyan": "^1.8.5",
    "fs-extra": "^2.0.0",
    "lodash": "^4.17.4"
  },
  "devDependencies": {
    "ava": "^0.18.1",
    "babel-cli": "^6.6.5",
    "babel-preset-env": "^1.1.8",
    "babel-preset-es2015": "^6.22.0",
    "concurrently": "^3.1.0",
    "fast-async": "^6.2.0",
    "nodemon": "^1.9.1",
    "rimraf": "^2.5.4",
    "standard": "^8.6.0",
    "tap-spec": "^4.1.1"
  },
  "engines": {
    "node": ">=6.9.5"
  },
  "ava": {
    "failFast": true,
    "tap": true,
    "source": [
      "**/*.{js,jsx}",
      "!dist/**/*"
    ],
    "require": [
      "babel-core/register",
      "babel-polyfill"
    ],
    "babel": {
      "presets": [
        [
          "env",
          {
            "targets": {
              "node": "current"
            }
          }
        ],
        "es2015",
        "stage-0"
      ],
      "plugins": [
        "fast-async"
      ],
      "ignore": [
        "docs",
        "node_modules",
        "dist",
        "test"
      ]
    }
  }
}
