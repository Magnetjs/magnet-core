{
  "name": "magnet-core",
  "version": "2.3.2",
  "description": "Magnet's core, a simple module loader.",
  "keywords": [
    "core",
    "magnet"
  ],
  "homepage": "https://github.com/Magnetjs/magnet-core#readme",
  "bugs": {
    "url": "https://github.com/Magnetjs/magnet-core/issues"
  },
  "license": "MIT",
  "author": "Kieve Chua <kievechua@gmail.com> (https://github.com/kievechua)",
  "bin": {
    "magnet": "./cli.js"
  },
  "files": [
    "README",
    "CHANGELOG.md",
    "index.js",
    "base.js",
    "cli.js",
    "convert.js"
  ],
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/Magnetjs/magnet-core.git"
  },
  "scripts": {
    "start": "babel src --out-dir dist",
    "test": "ava | tap-spec",
    "watch": "nodemon --ignore dist --exec \"babel src\" --out-dir dist --source-maps",
    "watch-all": "concurrently \"npm run watch\" \"npm run watch-test\"",
    "watch-test": "ava --watch | tap-spec",

    "build": "npm run clean-lib && npm run build:index && npm run copy-package",
    "build:index": "babel src --out-dir dist",

    "clean-lib": "node_modules/.bin/rimraf ./dist",
    "copy-package": "cp -rf package.json LICENSE README.md dist",
    "dist": "npm run build && cd dist && npm publish"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-0"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true,
      "mocha": true
    },
    "extends": "eslint-config-airbnb",
    "globals": {
      "__DEVELOPMENT__": true,
      "__CLIENT__": true,
      "__SERVER__": true,
      "__DISABLE_SSR__": true,
      "__DEVTOOLS__": true,
      "socket": true,
      "webpackIsomorphicTools": true
    },
    "plugins": [
      "import"
    ],
    "rules": {
      "import/default": 0,
      "import/no-duplicates": 0,
      "import/named": 0,
      "import/namespace": 0,
      "import/no-unresolved": 0,
      "import/no-named-as-default": 2,
      "jsx-quotes": 2,
      "block-scoped-var": 0,
      "padded-blocks": 0,
      "comma-dangle": 0,
      "indent": [
        2,
        2,
        {
          "SwitchCase": 1
        }
      ],
      "no-console": 0,
      "no-alert": 0
    },
    "settings": {
      "import/parser": "babel-eslint",
      "import/resolve": {
        "moduleDirectory": [
          "node_modules",
          "src"
        ]
      }
    }
  },
  "dependencies": {
    "lodash": "^4.17.4"
  },
  "devDependencies": {
    "ava": "^0.14.0",
    "babel-cli": "^6.6.5",
    "babel-core": "^6.7.2",
    "babel-plugin-transform-async-to-generator": "^6.7.4",
    "babel-polyfill": "^6.7.2",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-stage-0": "^6.5.0",
    "concurrently": "^2.0.0",
    "eslint": "^2.4.0",
    "eslint-config-airbnb": "^7.0.0",
    "eslint-plugin-import": "^1.1.0",
    "nodemon": "^1.9.1",
    "tap-spec": "^4.1.1"
  },
  "ava": {
    "failFast": true,
    "tap": true,
    "source": [
      "**/*.{js,jsx}",
      "!dist/**/*"
    ],
    "require": [
      "babel-core/register",
      "babel-polyfill"
    ],
    "babel": "inherit"
  }
}
